<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/my_behavior"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:collapsedTitleGravity="center"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginEnd="100dp"
            app:expandedTitleMarginStart="8dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/temp_img1"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/tabs" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                app:navigationIcon="@drawable/ic_arrow_left"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:background="@android:color/white"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#1D1D1D"
                    android:textSize="@dimen/size_34px" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:layout_collapseMode="pin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIndicatorColor="#FE6D09"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#FE6D09"
        app:tabTextColor="#B0B0B0"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_marginTop="@dimen/title_bar_height"
        android:layout_marginBottom="@dimen/title_bar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom"
        android:layout_weight="1"/>
    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:layout_gravity="end|bottom">
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/priceSignView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FE6D09"
                android:textSize="@dimen/size_26px"
                android:text="￥"/>
            <TextView
                android:id="@+id/priceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FE6D09"
                android:textSize="@dimen/size_36px"
                android:text="39"/>
        </LinearLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="24dp"
            android:text="我要买东西"
            android:elevation="2dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,139:56"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#11606060"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:rotation="180"
            android:layout_height="1px" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>